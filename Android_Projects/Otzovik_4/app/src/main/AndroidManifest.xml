<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maximternavsky.otzovik_4">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".TuneActivity"
            android:label="@string/title_activity_tune"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlaceDescription"
            android:label="@string/title_activity_place_description"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Intro"
            android:label="@string/title_activity_intro"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewPlace"
            android:label="@string/title_activity_new_place"
            android:theme="@style/AppTheme.NoActionBar"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"></activity>
    </application>

</manifest>